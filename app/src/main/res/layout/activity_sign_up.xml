<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Sign Up"
        android:gravity="center"
        android:textSize="35dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <EditText
            android:layout_width="350dp"
            android:id="@+id/new_id"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:hint="이메일 입력"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_error"
            android:layout_marginLeft="15dp"
            android:textColor="#ED5E5E"
            android:text="이메일 형식이 아닙니다."
            android:visibility="gone"
            />

        <EditText
            android:layout_width="350dp"
            android:id="@+id/new_pwd"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:inputType="textPassword"
            android:hint="비밀번호 입력"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/password_error"
            android:layout_marginLeft="15dp"
            android:textColor="#ED5E5E"
            android:text="비밀번호 형식이 아닙니다."
            android:visibility="gone"
            />

        <EditText
            android:layout_width="350dp"
            android:id="@+id/re_pwd"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:inputType="textPassword"
            android:hint="비밀번호 확인"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rePassword_error"
            android:layout_marginLeft="15dp"
            android:textColor="#ED5E5E"
            android:text="비밀번호가 다릅니다."
            android:visibility="gone"
            />

        <EditText
            android:layout_width="350dp"
            android:id="@+id/new_nick"
            android:layout_height="wrap_content"
            android:maxLength="5"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:hint="닉네임 입력 (5글자 이하)"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:maxLength="8"
            android:id="@+id/birthday"
            android:inputType="date"
            android:hint="\t생년원일 예)19910101"/>

        <!--<EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:maxLength="2"
            android:id="@+id/month"
            android:hint="\t월"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:maxLength="2"
            android:id="@+id/days"
            android:hint="\t일"/>-->




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio_group"
            android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/male"
            android:checked="true"
            android:layout_weight="1"
            android:text="남성"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/female"
            android:layout_weight="1"
            android:text="여성"/>

        </RadioGroup>


    </LinearLayout>
    
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="생년월일 선택하기"/>

        <DatePicker
            android:id="@+id/dpSpinner"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>-->

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/newSign_up"
        android:text="회원가입"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:background="@drawable/sign_up"/>


</LinearLayout>